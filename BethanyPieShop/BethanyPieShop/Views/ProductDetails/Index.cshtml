@model IEnumerable<BethanyPieShop.Models.ProductDetail>
@{
    ViewBag.Title = "Index";
}

<h2>Product Details</h2>
<div>
    <table class=" table-bordered table-condensed table-striped">
        <thead>
            <tr>
                <td>Product Name</td>
                <td>Short Description</td>
                <td> Long Description</td>
                <td>Price</td>
                <td>Operation</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in Model)
            {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ShortDescription</td>
                <td>@product.LongDescription</td>
                <td>@product.Price</td>
                <td>@Html.ActionLink("Details", "Details", "ProductDetails", new { id = product.ProductId }, new { @class = "btn btn-info btn-xs" })  @Html.ActionLink("Delete", "Delete", new { id = product.ProductId }, new { @class = "btn btn-danger btn-xs" })  @Html.ActionLink("Update", "Update", new { id = product.ProductId }, new { @class = "btn btn-warning btn-xs" })</td>
            </tr>
                
            }
        </tbody>
    </table>
</div>

